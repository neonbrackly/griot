# =============================================================================
# Griot Registry Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# For Docker Compose, place .env in the same directory as docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# API version prefix
API_V1_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# MongoDB Settings
# -----------------------------------------------------------------------------
# Connection URI (include credentials for authenticated connections)
MONGODB_URI=mongodb://localhost:27017

# Database name
MONGODB_DATABASE=griot_registry

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a strong random key for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# Token expiration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Algorithm (HS256, HS384, HS512, RS256, etc.)
JWT_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# API Key Authentication
# -----------------------------------------------------------------------------
# JSON array of valid API keys for service accounts
# Example: ["sk_live_abc123", "sk_live_def456"]
API_KEYS=[]

# Header name for API key
API_KEY_HEADER=X-API-Key

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# JSON array of allowed origins, or ["*"] for all
# Example: ["https://app.example.com", "https://admin.example.com"]
CORS_ORIGINS=["*"]

# -----------------------------------------------------------------------------
# Validation Settings
# -----------------------------------------------------------------------------
# Validate contracts before storing
VALIDATE_ON_CREATE=true
VALIDATE_ON_UPDATE=true

# Block operations on validation issues
BLOCK_ON_LINT_ERRORS=false
BLOCK_ON_LINT_WARNINGS=false
